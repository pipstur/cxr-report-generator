{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.10-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    },
    "vscode": {
      "settings": {
        "json.schemaDownload.enable": true,
        "flake8.args": [
          "--max-line-length=99",
          "--ignore=E203,E731,E402,W503"
        ],
        "black-formatter.args": [
          "--line-length=99"
        ],
        "black.args": [
          "--line-length=99"
        ],
        "isort.args": [
          "--line-length=99",
          "--profile",
          "black"
        ],
        "black-formatter.path": [
          "/workspaces/cxr-report-generator/venv/bin/black"
        ],
        "python.formatting.provider": "none",
        "python.defaultInterpreterPath": "/workspaces/cxr-report-generator/venv/bin/python",
        "editor.formatOnSave": true,
        "notebook.formatOnSave.enabled": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "black-formatter.showTrace": true,
        "python.jediEnabled": true,
        "interactiveWindow.executeWithShiftEnter": true,
        "jupyter.enableExtendedPythonKernelCompletions": true,
        "python.languageServer": "Pylance",
        "extensions.autoCheckUpdates": false,
        "update.showReleaseNotes": false,
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/node_modules/**": true,
          "**/logs/**": true,
          "**/data/**": true
        },
        "files.exclude": {
          "**/.git": true,
          "**/.svn": true,
          "**/.hg": true,
          "**/CVS": true,
          "**/.DS_Store": true,
          "**/node_modules": true,
          "**/bower_components": true
        },
        "search.followSymlinks": false,
        "workbench.colorTheme": "Default Dark+",
        "workbench.editorLargeFileConfirmation": 100,
        "git.openRepositoryInParentFolders": "never",
        "flake8.importStrategy": "fromEnvironment",
        "isort.importStrategy": "fromEnvironment",
        "black-formatter.importStrategy": "fromEnvironment",
        "black.importStrategy": "fromEnvironment",
        "files.eol": "\n",
        "python.analysis.diagnosticSeverityOverrides": {
          "reportAttributeAccessIssue": "none",
          "reportOptionalMemberAccess": "none"
        },
        "python.analysis.typeCheckingMode": "off"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.flake8",
        "tomoki1207.vscode-pdf"
      ]
    }
  },
  "runArgs": [
    // if running in a system with no NVIDIA GPU, comment the following 2 lines (it will possibly break initially)
    "--gpus",
    "all",
    "--shm-size=36g"
  ],
  "forwardPorts": [
    8501,
    6006
  ],
  "postCreateCommand": "bash .devcontainer/initialize.sh",
  "remoteUser": "vscode",
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/run/host-services/ssh-auth.sock"
  }
}
